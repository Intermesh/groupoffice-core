{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "sourceMap": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    // important for tree shaking in esbuild
    "module": "nodenext",
    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,

    "paths": {
      "@intermesh/goui": [
        "../dist/goui/script/index.d.ts",
        "../dist/goui/script/index.js"
      ]
    }
  },
  "include": [
    "./script"
  ],

}
